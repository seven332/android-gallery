<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="16dp"
  android:divider="@drawable/dp8"
  android:showDividers="middle">

  <TextView
    android:id="@+id/layout_manager_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LayoutManager"
    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
    android:textColor="@color/colorPrimary"/>

  <RadioGroup
    android:id="@+id/layout_manager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/layout_manager_scroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="ScrollLayoutManager"/>

    <RadioButton
      android:id="@+id/layout_manager_pager"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="PagerLayoutManager"/>

  </RadioGroup>

  <TextView
    android:id="@+id/scroll_layout_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ScrollLayout"
    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
    android:textColor="@color/colorPrimary"/>

  <RadioGroup
    android:id="@+id/scroll_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/scroll_layout_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="VerticalScrollLayout"/>

    <RadioButton
      android:id="@+id/scroll_layout_horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="HorizontalScrollLayout"/>

    <RadioButton
      android:id="@+id/scroll_layout_reversed_horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="ReversedHorizontalScrollLayout"/>

  </RadioGroup>

  <TextView
    android:id="@+id/pager_layout_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PagerLayout"
    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
    android:textColor="@color/colorPrimary"/>

  <RadioGroup
    android:id="@+id/pager_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/pager_layout_horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="HorizontalPagerLayout"/>

    <RadioButton
      android:id="@+id/pager_layout_reversed_horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="ReversedHorizontalPagerLayout"/>

  </RadioGroup>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PageInterval"
    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
    android:textColor="@color/colorPrimary"/>

  <TextView
    android:id="@+id/page_interval_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"/>

  <SeekBar
    android:id="@+id/page_interval"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:max="64"/>

  <TextView
    android:id="@+id/scale_type_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ScaleType"
    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
    android:textColor="@color/colorPrimary"/>

  <RadioGroup
    android:id="@+id/scale_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/scale_type_origin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Origin"/>

    <RadioButton
      android:id="@+id/scale_type_fit_width"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fit Width"/>

    <RadioButton
      android:id="@+id/scale_type_fit_height"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fit Height"/>

    <RadioButton
      android:id="@+id/scale_type_fit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fit"/>

    <RadioButton
      android:id="@+id/scale_type_fixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fixed"/>

  </RadioGroup>

  <TextView
    android:id="@+id/start_position_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="StartPosition"
    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
    android:textColor="@color/colorPrimary"/>

  <RadioGroup
    android:id="@+id/start_position"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/start_position_top_left"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Top Left"/>

    <RadioButton
      android:id="@+id/start_position_top_right"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Top Right"/>

    <RadioButton
      android:id="@+id/start_position_bottom_left"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bottom Left"/>

    <RadioButton
      android:id="@+id/start_position_bottom_right"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bottom Right"/>

    <RadioButton
      android:id="@+id/start_position_center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Center"/>

  </RadioGroup>

</LinearLayout>
